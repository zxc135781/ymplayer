.muse-selector {
  width: 100%;
  height: 50px;

  position: absolute;
  top: 50%;
  z-index: 12;

  transform(translateY(-50%));

  .muse-selector__prev, .muse-selector__next {
    width: 30px;
    height: 30px;
    text-align: center;
    display: inline-block;
    cursor: pointer;

    svg {
      width: 30px;
      height: 30px;
      margin-top: 5px;
      fill: #fff;
    }
  }

  .muse-selector__next {
    float: right;
  }
} //.muse-selector

