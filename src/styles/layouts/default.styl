      background: rgba(255, 255, 255, .5);

      border: 0px;
      border-radius: 50%;
      cursor: pointer;
      outline: none;

      transition(.5s all ease-in-out);

      &:hover {
        background: rgba(0, 0, 0, .5);
        svg {
          fill: #fff;
        }
